{
  "name": "shopify-app-template-node",
  "author": "saeedyasin.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "debug": "node --inspect-brk index.ts",
    "dev": "cross-env NODE_ENV=development nodemon index.ts",
    "build": "tsc --skipLibCheck",
    "prepare": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate deploy",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "start": "npm run prisma:migrate && npm run serve",
    "test": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "pretty": "prettier --write ."
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "@shopify/admin-graphql-api-utilities": "^2.0.1",
    "@shopify/shopify-api": "^6.0.2",
    "@shopify/shopify-app-express": "^1.0.2",
    "@shopify/shopify-app-session-storage-sqlite": "^1.0.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@types/nodemon": "^1.19.2",
    "@types/serve-static": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitest/coverage-c8": "^0.26.2",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.2"
  }
}
