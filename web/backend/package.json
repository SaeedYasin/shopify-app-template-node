{
  "name": "shopify-app-template-node",
  "author": "saeedyasin.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "debug": "node --inspect-brk index.ts",
    "dev": "cross-env NODE_ENV=development nodemon --experimental-specifier-resolution=node index.ts",
    "build": "tsc --skipLibCheck",
    "prepare": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate deploy",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "start": "npm run prisma:migrate && npm run serve",
    "test": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "pretty": "prettier --write ."
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@shopify/admin-graphql-api-utilities": "^2.0.1",
    "@shopify/shopify-api": "^6.1.0",
    "@shopify/shopify-app-express": "^1.1.0",
    "@shopify/shopify-app-session-storage-sqlite": "^1.0.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "mixpanel": "^0.17.0",
    "express-static-gzip": "^2.1.7"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "@types/nodemon": "^1.19.2",
    "@types/serve-static": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitest/coverage-c8": "^0.28.4",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vitest": "^0.28.4"
  }
}
